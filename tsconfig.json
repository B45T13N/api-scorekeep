{
    "compilerOptions": {
        "allowJs": true,
        "module": "ESNext",
        "moduleResolution": "bundler",
        "jsx": "react-jsx",
        "strict": true,
        "isolatedModules": true,
        "target": "ESNext",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "paths": {
            "@/*": ["./resources/js/*"],
            "ziggy-js": ["./vendor/tightenco/ziggy"],
            "@/Components/*": [
                "./resources/js/Components/*"
            ],
            "@/./resources/*": [
                "./resources/js/*"
            ],
            "@/pages/*": [
                "./resources/js/Pages/*"
            ],
            "@/services/*": [
                "./resources/js/services/*"
            ],
            "@/interfaces/*": [
                "./resources/js/Models/*"
            ],
            "@/hooks/*": [
                "./resources/js/Hooks/*"
            ],
            "@/images/*": [
                "./resources/js/images/*"
            ],
            "@/styles/*": [
                "./resources/js/styles/*"
            ]
        }
    },
    "include": ["resources/js/**/*.ts", "resources/js/**/*.tsx", "resources/js/**/*.d.ts"],
}
